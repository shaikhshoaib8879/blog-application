# Environment variables for Flask Blog API
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production-make-it-long-and-random
JWT_SECRET_KEY=your-jwt-secret-key-here-also-make-it-long-and-random
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration - PostgreSQL
# Update with your PostgreSQL credentials
DATABASE_URL=postgresql://username:password@localhost:5432/blog_db

# CORS Configuration - Frontend URL
CORS_ORIGINS=http://localhost:3000

# OAuth Configuration - GitHub
# Get these from https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth Configuration - Google
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Development Only Settings (remove in production)
OAUTHLIB_INSECURE_TRANSPORT=1
OAUTHLIB_RELAX_TOKEN_SCOPE=1
