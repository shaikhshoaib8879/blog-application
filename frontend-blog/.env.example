# Backend API Configuration (base URL only; the app adds /api automatically)
REACT_APP_API_URL=https://your-flask-api-domain.com

# Production environment
REACT_APP_ENV=production

# Google OAuth
REACT_APP_GOOGLE_CLIENT_ID=your_production_google_client_id

# GitHub OAuth
REACT_APP_GITHUB_CLIENT_ID=your_production_github_client_id

# Cloudinary (Unsigned uploads; frontend-only)
# Create a free Cloudinary account, an unsigned preset, and set these:
REACT_APP_CLOUDINARY_CLOUD_NAME=your_cloud_name
REACT_APP_CLOUDINARY_UPLOAD_PRESET=your_unsigned_preset
REACT_APP_CLOUDINARY_FOLDER=blog-media
